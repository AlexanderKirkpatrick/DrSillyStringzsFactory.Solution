@{
  Layout = "_Layout";
}
@using Silly_Factory.Models 
@model Silly_Factory.Models.Machine

<h2>Machine Details</h2>
<br>
<br>
@using (Html.BeginForm()) 
{
  <p>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</p>
<br>
  <p>Engineers:</p>
  <ul>
  @foreach(var join in Model.JoinEngineerMachine)
  {
    <li><a href=/Engineers/Details/@join.Engineer.EngineerId>@join.Engineer.Name</a></li>
  }
  </ul>
}
<br>
<br>
<br>
<p>@Html.ActionLink("Add a Engineer", "AddEngineer", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Machines", "Index")</p>
<p>@Html.ActionLink("Engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>