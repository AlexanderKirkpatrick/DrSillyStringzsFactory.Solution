@{
  Layout = "_Layout";
}

@using Silly_Factory.Models;
@model List<Silly_Factory.Models.Machine>;

<h1>Machines</h1>
<br>
<br>
@if (@Model.Count == 0)
{
  <h3>No Machines have been added yet!</h3>
} 

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
}
<br>
<br>
<br>
<p>@Html.ActionLink("Add New Machine", "Create")</p>
<p>@Html.ActionLink("Add New Engineer", "Create", "Engineers")</p>
<p>@Html.ActionLink("Engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>