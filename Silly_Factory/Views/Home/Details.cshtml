@{
  Layout = "_Layout";
}

@using Silly_Factory.Models;
@model List<Silly_Factory.Models.Engineer>;

<h1>Engineers</h1>
<br>
<br>
@if (@Model.Count == 0)
{
  <h3>No Engineers have been added yet!</h3>
} 

<p>Machines:</p>
  <ul>
  @foreach(var join in Model.JoinMachineEngineer)
  {
    <li><a href=/Machines/Details/@join.Machine.MachineId>@join.Machine.Name</a></li>
  }
  </ul>
<br>
<p>Engineers:</p>
  <ul>
  @foreach(var join in Model.JoinEngineerMachine)
  {
    <li><a href=/Engineers/Details/@join.Engineer.EngineerId>@join.Engineer.Name</a></li>
  }
  </ul>
<br>
<br>
<br>
<p>@Html.ActionLink("Add New Engineer", "Create")</p>
<p>@Html.ActionLink("Add New Machine", "Create", "Machines")</p>
<p>@Html.ActionLink("Machines", "Index", "Machines")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>