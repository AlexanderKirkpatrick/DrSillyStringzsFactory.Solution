@{
  Layout = "_Layout";
}

@using Silly_Factory.Models;
@model List<Silly_Factory.Models.Engineer>;

<h1>Engineers</h1>
<br>
<br>
@if (@Model.Count == 0)
{
  <h3>No Engineers have been added yet!</h3>
} 

@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = Engineer.EngineerId })</li>
}
<br>
<br>
<br>
<p>@Html.ActionLink("Add New Engineer", "Create")</p>
<p>@Html.ActionLink("Add New Machine", "Create", "Machines")</p>
<p>@Html.ActionLink("Machines", "Index", "Machines")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>