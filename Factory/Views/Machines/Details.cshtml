@{
  Layout = "_Layout";
}
@using Factory.Models 
@model Factory.Models.Machine

<h2>Machine Details</h2>
<br>
<br>
@using (Html.BeginForm()) 
{
  <p>@Html.Label("Name"): @Html.DisplayFor(model => model.MachineName)</p>
<br>
  <p>Engineers:</p>
  @if (@Model.Engineers.Count == 0)
  {
    <h5>No Engineers Added!</h5>
  }
  else
  {
  <ul>
  @foreach(var join in Model.Engineers)
  {
    <li><a href=/Engineers/Details/@join.Engineer.EngineerId>@join.Engineer.EngineerName</a></li>
  }
  </ul>
  }
}
<br>
<br>
<br>
<p>@Html.ActionLink("Add an Engineer", "AddEngineer", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Remove an Engineer", "RemoveEngineer", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Machines", "Index")</p>
<p>@Html.ActionLink("Engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>